<div class="container" style="padding-top:5px;">
  <div class="row">
    <form method="post" action="/categories/add">
      <fieldset>
        <legend><h2>Add Category</h2></legend>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="category">Category:</label>
              <input class="form-control" id="category" name="category" type="text" autofocus />
            </div>
          </div>
        </div>
      </fieldset>
      <hr />
      <input type="submit" class="btn btn-primary pull-right" value="Add Category" /><br />
    </form>
  </div>
</div>
